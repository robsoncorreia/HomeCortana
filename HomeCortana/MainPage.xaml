<Page
    x:Class="HomeCortana.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:HomeCortana"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <ToggleSwitch x:Name="tsQuarto" Header="Quarto" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Toggled="tsQuarto_Toggled"/>
        <ToggleSwitch x:Name="tsSala" Header="Sala" HorizontalAlignment="Left" Margin="10,242,0,0" VerticalAlignment="Top" Toggled="tsSala_Toggled"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="100" Margin="10,307,0,0" VerticalAlignment="Top" Width="340" AutomationProperties.LiveSetting="Assertive">
            <TextBlock x:Name="lblMensagem" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.567"/>
        </ListBox>
    </Grid>
</Page>
